<?xml version="1.0" encoding="UTF-8" ?>
<swupdate product="Tradinco HMI">
    <media>
        <media-path>/foo</media-path>
        <archive-match>update*.tgz</archive-match>
    </media>

    <update-validate>
        <file>frontend</file>
        <file>backend</file>
        <directory>languages/frontend<directory>
        <directory>languages/backend<directory>
    </update-validate>

    <backup path="/tmp/backup">
        <file>/opt/tradinco-hmi/frontend</file>
        <file>/opt/tradinco-hmi/backend</file>
        <directory>/var/appdata/languages/frontend</directory>
        <directory>/var/appdata/languages/backend</directory>
    </backup>

    <update>
        <copy>
            <file root="Media">backend</file>
            <to-directory root="System">/etc</to-directory>
        </copy>
        <copy>
            <directory root="Media">languages/backend</directory>
            <to-directory root="System">/etc/backend/languages</to-directory>
        </copy>
        <copy>
            <directory root="Media">languages/frontend</directory>
            <to-directory root="System">/etc/frontend/languages</to-directory>
        </copy>
        <remove root="System" type="File">/appdata/appcopy/swupdate</remove>
    </update>
</swupdate>
